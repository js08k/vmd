@startuml

enum Action {
    ActionAppend
    ActionFlush
    ActionDecryptAppend
    ActionDecryptFlush
}

enum MediaState {
    MediaNotAvailable
    MediaLoading
    MediaIdle
    MediaReading
}

MediaContext <|-- MediaSender
class MediaSender <<MediaContext>> {

-- signals --
{field}connected to MediaReceiver
+send(MediaFrame)

-- slots --
{field}connected to MediaReceiver
+receive(StreamControl)
}

MediaContext <|-- MediaReceiver
class MediaReceiver <<MediaContext>> {
-- signals --
{field}connected to MediaSender
+send(StreamControl)

-- slots --
{field}connected to MediaSender
+receive(MediaFrame)
}

@enduml
